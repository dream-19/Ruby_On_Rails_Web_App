<%= f.label :ending_time, class: "form-label" do %>
  Ending Time
  <% if local_assigns[:required] %>
    <span class ="asterisk">*</span>
  <% end %>
<% end %>
<%= f.time_field :ending_time, class: "form-control" %>
<% if resource.errors[:ending_time].present? %>
  <div class="invalid-feedback" style="display:block;">
    <% resource.errors.full_messages_for(:ending_time).each do |message| %>
      <%= message %><br/>
    <% end %>
  </div>
<% end %>