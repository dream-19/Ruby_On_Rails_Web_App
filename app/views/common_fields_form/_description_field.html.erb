<%= f.label :description, class: "form-label" do %>
  Description
  <% if local_assigns[:required] %>
    <span class ="asterisk">*</span>
  <% end %>
<% end %>
<%= f.text_area  :description, autofocus: true, class: "form-control" %>
<% if resource.errors[:description].present? %>
  <div class="invalid-feedback" style="display:block;">
    <% resource.errors.full_messages_for(:description).each do |message| %>
      <%= message %><br/>
    <% end %>
  </div>
<% end %>