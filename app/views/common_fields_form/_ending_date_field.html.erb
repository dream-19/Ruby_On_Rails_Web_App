<%= f.label :ending_date, class: "form-label" do %>
  Ending Date
  <% if local_assigns[:required] %>
    <span class ="asterisk">*</span>
  <% end %>
<% end %>
<%= f.date_field :ending_date, class: "form-control" %>
<% if resource.errors[:ending_date].present? %>
  <div class="invalid-feedback" style="display:block;">
    <% resource.errors.full_messages_for(:ending_date).each do |message| %>
      <%= message %><br/>
    <% end %>
  </div>
<% end %>