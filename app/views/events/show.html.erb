<div class="container mt-5">
  <div class="row">
    <!-- Left Column: Event Details -->
    <div class="col-md-4">
      <h3><%= @event.name %></h3>
      <p><strong>Event Organizer:</strong> <%= @event.user.get_name %></p>
      <p><strong>Start:</strong> <%= format_date(@event.beginning_date) %> at <%= format_time(@event.beginning_time) %></p>
      <p><strong>End:</strong> <%= format_date(@event.ending_date) %> at <%= format_time(@event.ending_time) %></p>
      <p><strong>Participants:</strong> <%= @event.subscriptions.count %> / <%= @event.max_participants %></p>
      <p><strong>Address:</strong> <%= @event.address %><br>
      <%= @event.city %>, <%= @event.province %> (<%= @event.cap %>), <%= @event.country %></p>
      
      <% if @event.user == current_user %>
        <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary me-2' %>
        <%= link_to 'Delete', '#', class: 'btn btn-danger', 'data-bs-toggle': 'modal', 'data-bs-target': '#deleteEventModal' %>
      <% end %>
      <%= link_to 'Back to Events', events_path, class: 'btn btn-secondary mt-2' %>
    </div>
    
    <!-- Right Column: Subscriptions -->
    <div class="col-md-8">
      <h3>Subscriptions</h3>
      <!-- Subscription List or Details Here -->
    </div>
  </div>
</div>

<!-- Modal for Deleting Event -->
<div class="modal fade" id="deleteEventModal" tabindex="-1" aria-labelledby="deleteEventModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteEventModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this event? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <%= link_to "Delete Event", @event, method: :delete, class: "btn btn-danger", data: { turbo_method: :delete } %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
