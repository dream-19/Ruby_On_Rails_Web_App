<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg p-4">
        <% if current_user.type == UserRoles::USER_NORMAL %>
          <h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %> (user account)</h2>
          <%= render 'form_user_normal_edit', resource: resource, resource_name: resource_name %>
        <% elsif current_user.type== UserRoles::COMPANY_ORGANIZER %>
          <h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %> (company organizer account)</h2>
          <%= render 'form_company_organizer_edit', resource: resource, resource_name: resource_name %>
        <% elsif current_user.type == UserRoles::USER_ORGANIZER %>
          <h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %> (organizer account)</h2>
          <%= render 'form_user_organizer_edit', resource: resource, resource_name: resource_name %>
        <% else %>
          <!-- Impossible -->
          <div class="alert alert-danger">
            <strong>Sorry, I can't find your account</strong>
          </div>
        <% end %>
        <hr/>
        <div class="col-md-3 mb-3">
          <!-- link to home -->
          <%= link_to "Back", root_path, class: "btn btn-secondary btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg p-4 mb-3">
        <div class="mt-4 text-center">
          <h3>Delete my account</h3>
          <%= link_to 'Delete Account', 'javascript:void(0);', class: 'btn btn-danger ms-2', 'data-bs-toggle': 'modal', 'data-bs-target': '#deleteModal' %>
          <%= render 'modals/delete_account_modal' %>
        </div>
      </div>
    </div>
  </div>
</div>